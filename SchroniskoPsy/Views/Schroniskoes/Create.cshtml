@model SchroniskoPsy.Models.Schronisko

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>
<link rel="stylesheet" type="text/css" href="~/css/style.css" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulica" class="control-label"></label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miejscowosc" class="control-label"></label>
                <input asp-for="Miejscowosc" class="form-control" />
                <span asp-validation-for="Miejscowosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumerTel" class="control-label"></label>
                <input asp-for="NumerTel" class="form-control" />
                <span asp-validation-for="NumerTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="button-29" role="button" type="submit" value="Dodaj">Dodaj</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

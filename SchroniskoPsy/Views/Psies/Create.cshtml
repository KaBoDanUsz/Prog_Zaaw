@model SchroniskoPsy.Models.Psy

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css" />
<h1>Dodaj psa</h1>

<h4>Psy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wiek" class="control-label"></label>
                <input asp-for="Wiek" class="form-control" />
                <span asp-validation-for="Wiek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Charakter" class="control-label"></label>
                <input asp-for="Charakter" class="form-control" />
                <span asp-validation-for="Charakter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rasa" class="control-label"></label>
                <input asp-for="Rasa" class="form-control" />
                <span asp-validation-for="Rasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plec" class="control-label"></label>
                <select asp-for="Plec" class="form-control">
                    <option value="">Wybierz</option>
                    <option value="Samiec">Samiec</option>
                    <option value="Samica">Samica</option>
                </select>
                <span asp-validation-for="Plec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchroniskoID" class="control-label">Nazwa Schroniska</label>
                <select asp-for="SchroniskoID" class ="form-control" asp-items="ViewBag.SchroniskoID"></select>
            </div>
            <div class="form-group">
                <button class="button-29" role="button" type="submit" value="Dodaj">Dodaj</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy psów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
